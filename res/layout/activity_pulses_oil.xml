<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.epds_new.GrainActivity" >

    <TextView
        android:id="@+id/dalChana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:background="@drawable/price"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="Daal Malka"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/dalMalka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dalChana"
        android:layout_alignBottom="@+id/dalChana"
        android:layout_alignLeft="@+id/textView1"
        android:background="@drawable/price"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dalMalka"
        android:layout_below="@+id/dalMalka"
        android:text="Gram Daal"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/dalChana"
        android:layout_marginLeft="18dp"
        android:text="Daal Chana"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/gramDal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:background="@drawable/price"
        android:layout_below="@+id/textView3"
        android:text="" 
           android:gravity="center"/>

    <TextView
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gramDal"
        android:layout_alignLeft="@+id/textView2"
        android:text="Arhar Daal" />

    <TextView
        android:id="@+id/arharDal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dalChana"
        android:layout_alignTop="@+id/gramDal"
        android:background="@drawable/price"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gramDal"
        android:layout_below="@+id/gramDal"
        android:textColor="#ffffff"
        android:text="Urad Daal" />

    <TextView
        android:id="@+id/uradDal"
        android:background="@drawable/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:gravity="center"
        android:layout_below="@+id/textView5"
        android:text="" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/arharDal"
        android:layout_below="@+id/arharDal"
        android:text="Moong Daal"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/moongDal"
        android:background="@drawable/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignLeft="@+id/arharDal"
        android:layout_below="@+id/textView6"
        android:text="" />

</RelativeLayout>
